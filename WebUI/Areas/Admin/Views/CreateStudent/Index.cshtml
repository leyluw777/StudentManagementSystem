					type: "POST",
					url: "@Url.Action("Index", "CreateStudent")", // Replace with your action and controller names
					data: $(this).serialize(), // Serialize the form data
					success: function (data) {

						// Update the modal content with response data
						$("#modal-username").text(data.username);
						$("#modal-password").text(data.password);

						// Show the modal
						$('#exampleModalCenter').modal('show');
					},
					error: function (xhr, status, error) {
						// Handle errors if necessary
					}
				});
			});
		</script>
	}


