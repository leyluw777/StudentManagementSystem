<body>


    <div class="content-body pe-0">
        <div class="container-fluid">
                <!-- row -->
            <div class="row">
               
             
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Edit lesson</h4>
                        </div>
            <form method="post" asp-action="UpdateLesson" asp-controller="Lessons">
                        <div class="card-body">
                                <div class="row">

                                    <div class="mb-3 col-md-6">
                                        <label class="form-label">Lesson Name</label>
                                        <input type="hidden" name="lesson.Id" value="@Model.Id">
                                        <input type="text" class="form-control" name="lesson.Name" value="@Model.Name">
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label class="form-label">Group Name</label>
                                        <input type="text" class="form-control" name="lesson.Group" value="@Model.Group" readonly>
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label class="form-label">Topics covered</label>
                                        <input type="text" class="form-control" name="lesson.TopicsCovered" value="@Model.TopicsCovered">
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label>Notes</label>
                                        <input type="text" class="form-control" name="lesson.Notes" value="@Model.Notes">
                                    </div>
                                </div>


                                <div class="row">

                                    <div class="col-xl-12 wow fadeInUp" data-wow-delay="1.5s">
                                        <div class="table-responsive ">
                                            <table class="table primary-table-bordered ">
                                                <thead class="thead-primary">
                                                    <tr>
                                                        <th scope="col">Student Name</th>
                                                        <th scope="col">Surname</th>
                                                        <th scope="col">Father's name</th>
                                                        <th scope="col">Username</th>
                                                        <th scope="col">Password</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var student in groups)
                                                    {
                                                        <tr>

                                                            <td> @student.Name</td>
                                                            <td> @student.Surname</td>
                                                            <td> @student.FathersName</td>
                                                            <td> @student.Status</td>
                                                         

                                                        </tr>
                                                    }


                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                </div>

                            <div class="row">
                                <div class="col-md-6 col-xl-6 col-xxl-6 mb-3">
                                    <label class="form-label">Start time of lesson</label>
                                    <div class="input-group clockpicker">
                                            <input type="text" class="form-control" name="lesson.StartTime" value="@Model.StartTime.ToString(" HH:mm")"><span class="input-group-text"><i class="far fa-clock"></i></span>
                                            
                                        </div>
                                </div>
                                <div class="col-md-6 col-xl-6 col-xxl-6 mb-3">
                                        <label class="form-label">End time of lesson</label>
                                        <div class="input-group clockpicker">
                                            <input type="text" class="form-control" name="lesson.EndTime" value="@Model.EndTime.ToString(" HH:mm")"><span class="input-group-text"><i class="far fa-clock"></i></span>
                                        </div>
                                    </div>
                                <button type="submit" class="btn btn-primary" >Update lesson</button>
                            </div>

                               
                        </div>
            </form>
                    </div>
                </div>

            
            </div>
        </div>
    </div>


