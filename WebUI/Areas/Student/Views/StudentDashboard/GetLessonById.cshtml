<body>


    <div class="content-body pe-0">
        <div class="container-fluid">
            <!-- row -->
            <div class="row">



                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Edit lesson</h4>
                        </div>
                        <form >
                            <div class="card-body">
                                <div class="row">

                                    <div class="mb-3 col-md-6">
                                        <label class="text-primary ">Lesson Name</label>
                                        <p class="text-muted" type="hidden" name="lesson.Id" value="@Model.Id" id="lessonId">@Model.Id</p>
                                        <p class="text-muted" type="text" name="lesson.Name" value="@Model.Name" id="lessonName">@Model.Name</p>
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label class="text-primary">Group Name</label>
                                        <p class="text-muted" type="text" name="lesson.Group" value="@Model.Group">@Model.Group</p>
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label class="text-primary">Topics covered</label>
                                        <p class="text-muted" type="text" name="lesson.TopicsCovered" id="lessonTopicsCovered" value="@Model.TopicsCovered">@Model.TopicsCovered</p>
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label>Notes</label>
                                        <p class="text-muted" type="text" name="lesson.Notes" value="@Model.Notes" id="lessonNotes">@Model.Notes</p>
                                    </div>
                                </div>




                                <div class="row">
                                    <div class="col-md-6 col-xl-6 col-xxl-6 mb-3">
                                        <label class="text-primary">Start time of lesson</label>
                                        <div class="input-group clockpicker">
                                            <p class="text-muted" type="text" name="lesson.StartTime" id="lessonStartTime" value="@Model.StartTime.ToString(" HH:mm")"><span class="input-group-text"><i class="far fa-clock"></i></span>@Model.StartTime.ToString(" HH:mm")</p>

                                        </div>
                                    </div>
                                    <div class="col-md-6 col-xl-6 col-xxl-6 mb-3">
                                        <label class="text-primary">End time of lesson</label>
                                        <div class="input-group clockpicker">
                                            <p class="text-muted" type="text" name="lesson.EndTime" id="lessonEndTime" value="@Model.EndTime.ToString(" HH:mm")"><span class="input-group-text"><i class="far fa-clock"></i></span>@Model.EndTime.ToString(" HH:mm")</p>
                                        </div>
                                    </div>

                                </div>


                                <div class="row">

                                    <div class="col-xl-12 wow fadeInUp" data-wow-delay="1.5s">
                                       
                                    </div>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>


            </div>
        </div>
    </div>


